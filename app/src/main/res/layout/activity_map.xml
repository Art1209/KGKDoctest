<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/chooseBtnText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/choose_button_dialog"
    android:textSize="@dimen/main_text_size"
    android:layout_marginBottom="6dp"
    app:layout_constraintBottom_toTopOf="@+id/mapImage"
    android:layout_marginLeft="76dp"
    app:layout_constraintLeft_toLeftOf="@+id/mapImage" />
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="323dp"
        android:layout_height="460dp"
        android:src="@drawable/pic1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.761"
        app:layout_constraintHorizontal_bias="0.508" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        android:visibility="visible"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="@+id/mapImage"
        app:layout_constraintTop_toTopOf="@+id/mapImage"
        android:layout_marginTop="66dp"
        tools:background="@drawable/yellow_circle" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="@+id/mapImage"
        tools:background="@drawable/yellow_circle"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="@+id/mapImage"
        app:layout_constraintTop_toTopOf="@+id/mapImage"
        android:layout_marginTop="204dp"
        tools:background="@drawable/yellow_circle"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="@+id/mapImage"
        app:layout_constraintTop_toTopOf="@+id/mapImage"
        android:layout_marginTop="400dp"
        tools:background="@drawable/yellow_circle"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        app:layout_constraintTop_toTopOf="@+id/mapImage"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="@+id/mapImage"
        tools:background="@drawable/yellow_circle"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/white_circle"
        android:layout_marginTop="162dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="@+id/mapImage"
        tools:background="@drawable/yellow_circle"/>
</android.support.constraint.ConstraintLayout>
